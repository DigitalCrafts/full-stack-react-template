{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "plugin:node/recommended", "plugin:prettier/recommended"],
  "env": {
    "es2021": true,
    "node": true
  },
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-lonely-if": "error",
    "no-return-assign": "error",
    "no-unused-vars": "warn",
    "prefer-object-spread": "error",
    "no-bitwise": "error"
  }
}
